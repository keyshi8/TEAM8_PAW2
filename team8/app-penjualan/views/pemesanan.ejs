<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>

    <% if (typeof successMessage !== 'undefined') { %>
        <p style="color: green;"><%= successMessage %></p>
    <% } %>

    <form action="/pemesanan" method="POST">
        <fieldset>
            <div class="mb-3">
                <label for="nama" class="form-label">Nama</label>
                <input type="text" id="nama" name="nama" class="form-control" placeholder="Nama" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="mb-3">
                <label for="pesanan" class="form-label">Pesanan</label>
                <select id="pesanan" name="pesanan" class="form-select" required>
                    <option value="">Pilih Pesanan</option>
                    <option value="pesanan1">Pesanan 1</option>
                    <option value="pesanan2">Pesanan 2</option>
                    <!-- Add more options as needed -->
                </select>
            </div>
            <div class="mb-3">
                <label for="jumlah" class="form-label">Jumlah</label>
                <input type="number" id="jumlah" name="jumlah" class="form-control" placeholder="Jumlah" required min="1">
            </div>
            <div class="mb-3">
                <label for="total" class="form-label">Total</label>
                <input type="text" id="total" name="total" class="form-control" placeholder="Total" readonly>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="checkField" required>
                    <label class="form-check-label" for="checkField">
                        Saya setuju dengan syarat dan ketentuan
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>

    <a href="/">Kembali ke Halaman Utama</a>
</body>
</html>
